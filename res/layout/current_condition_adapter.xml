<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_current_condition_adapter__linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/color_black"
    android:visibility="gone"
    android:orientation="vertical" >

    <!-- Observation Time -->
    <TextView
        android:id="@+id/id_current_condition_adapter__observation_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="22dp" />
    
    <!-- Current day description -->
    <TextView
        android:id="@+id/id_current_condition_adapter__current_day_desc_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageView
            android:id="@+id/id_current_condition_adapter__current_weather_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/ic_pin"
            android:textColor="@color/color_white" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2" >

            <!-- Current Temperature -->
            <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center" >
            
                <ImageView
		            android:layout_width="24dp"
		            android:layout_height="24dp"
		            android:src="@drawable/ic_max_temperature" />
	            <TextView
	                style="@style/TableTextViewStyle"
	                android:id="@+id/id_current_condition_adapter__temperature_text_view"
	                android:text="27Âª" />
            </TableRow>
            
            <!-- Precip MM -->
            <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center" >
            
                <ImageView
		            android:layout_width="24dp"
		            android:layout_height="24dp"
		            android:src="@drawable/ic_precip_mm" />
	            <TextView
	                style="@style/TableTextViewStyle"
	                android:id="@+id/id_current_condition_adapter__precip_text_view"
	                android:text="5.1 mm" />
            </TableRow>
            
            <!-- Wind Dir -->
            <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center" >
            
                <ImageView
		            android:layout_width="24dp"
		            android:layout_height="24dp"
		            android:src="@drawable/ic_wind_dir" />
	            <TextView
	                style="@style/TableTextViewStyle"
	                android:id="@+id/id_current_condition_adapter__wind_dir_text_view"
	                android:text="W" />
            </TableRow>
            
            <!-- Wind Speed -->
            <TableRow
                android:layout_marginTop="5dp"
                android:gravity="center" >
            
                <ImageView
		            android:layout_width="24dp"
		            android:layout_height="24dp"
		            android:src="@drawable/ic_wind_speed" />
	            <TextView
	                style="@style/TableTextViewStyle"
	                android:id="@+id/id_current_condition_adapter__wind_speed_text_view"
	                android:text="1.4 km/h" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>